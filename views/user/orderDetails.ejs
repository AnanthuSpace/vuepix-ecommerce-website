<%- include("../partials/userHeader") %>



    <style>
        .custom-btn {
            /* Add your custom styles here */
            background-color: #4CAF50;
            /* Green */
            border: none;
            color: white;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
        }
    </style>




    <main class="container">

        <section class="content-main">
            <div class="content-header">
                <div class="mt-50">
                    <h2 class="content-title card-title">Order detail</h2>
                    <p>Details for Order ID: <%=orderId%>
                    </p>
                </div>
            </div>
            <div class="card mt-60"></div>
            </div>
            <div class="card-body">
                <div class="row mb-50 mt-20 order-info-wrap background-info">
                    <div class="col-md-4">
                        <article class="icontext align-items-start ml-130">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="material-icons text-primary person"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Customer</h6>
                                <p class="mb-1">
                                    <%= orders.address[0].name %> <br>
                                        <%= orders.address[0].phone %>
                                </p>
                            </div>

                        </article>

                    </div> <!-- col// -->
                    <div class="col-md-4">
                        <article class="icontext align-items-start ml-130">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-local_shipping"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Order info</h6>
                                <p class="mb-1">
                                    <%if(locals.orders){%>
                                        Pay method: <%=orders.payment%>
                                            <%}%>

                                </p>

                            </div>
                        </article>
                    </div> <!-- col// -->
                    <div class="col-md-4">
                        <article class="icontext align-items-start ml-130">
                            <span class="icon icon-sm rounded-circle bg-primary-light">
                                <i class="text-primary material-icons md-place"></i>
                            </span>
                            <div class="text">
                                <h6 class="mb-1">Deliver to</h6>
                                <p class="mb-1">
                                    Address: <%=orders.address[0].landMark%>,<%=orders.address[0].city%> <br>
                                            <%=orders.address[0].state%>,<%=orders.address[0].addressType%> <br>
                                                    <%=orders.address[0].pincode%>
                                </p>

                            </div>
                        </article>
                    </div> <!-- col// -->
                </div> <!-- row // -->
                <div class="row">
                    <div class="col-lg">
                        <div class="table-responsive">
                            <table class="table">
                                <thead>
                                    <tr class="text-center">
                                        <th width="30%">Product</th>
                                        <th width="20%">Name</th>
                                        <th width="10%">Unit Price</th>
                                        <th width="10%">Quantity</th>
                                        <th class="text-center" width="10%">Amount</th>
                                        <th class="text-center" width="10%">Status</th>
                                        <th class="text-center" width="10%">Action</th>
                                        <th class="text-center" width="20%" class="text-end">Total</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <%if(locals.orders){%>
                                        <% let orderId; %>
                                            <% for (let i=0; i < orders.product.length; i++) { %>
                                                <tr>
                                                    <td class="text-center">
                                                        <a class="itemside" href="#">
                                                            <div class="left">
                                                                <img src="/uploads/products/<%= orders.product[i].images %>"
                                                                    style="height: 7rem; width: 7rem;" class="img-xs"
                                                                    alt="Item">
                                                            </div>
                                                        </a>
                                                    </td>
                                                    <td class="text-center">
                                                        <div class="info">
                                                            <%= orders.product[i].name %>
                                                        </div>
                                                    </td>
                                                    <td class="text-center">
                                                        ₹<%= orders.product[i].price.toLocaleString() %>
                                                    </td>
                                                    <td class="text-center">
                                                        <%= orders.product[i].unit %>
                                                    </td>
                                                    <td class="text-center">
                                                        ₹<%= (parseInt(orders.product[i].price) *
                                                            parseInt(orders.product[i].unit)).toLocaleString() %>

                                                    </td>
                                                    <td class="text-center">
                                                        <%= orders.product[i].status %>
                                                    </td>
                                                    <td class="text-center">
                                                        <% if (orders.product[i].status !=="Canceled" ) { %>
                                                            <% if (orders.product[i].status==="Delivered" ) { %>
                                                                <div class="row">


                                                                    <div class="col-2" style="margin-right: 40px; ">
                                                                        <a class="btn custom-btn" id="print-button">Invoice</a>
                                                                    </div>
                                                                    <div class="col-2">
                                                                        <a class="btn custom-btn"
                                                                            href="http://localhost:3000/return?id=<%= orders._id%>">Return</a>
                                                                    </div>


                                                                    <div class="col-5"
                                                                        style="margin-top: 17px; margin-left: 50px;">

                                                                        <h4 class="text-success">Delivered</h4>

                                                                    </div>
                                                                </div>
                                                                <% }else if(orders.product[i].status==="Returned" ){ %>
                                                                    <h4 class="text-warning">Returned</h4>
                                                                    <% } else { %>
                                                                        <input type="hidden" id="singleProId"
                                                                            value="<%=orders.product[i]._id%>">
                                                                        <input type="hidden" id="quantity"
                                                                            value="<%=orders.product[i].unit%>">
                                                                        <select id="actionDropdown"
                                                                            class="form-select form-select-sm d-inline-block mb-lg-0 mb-15 mw-100"
                                                                            onchange="handleDropdownChange(this)">
                                                                            <option value="status">Status</option>
                                                                            <option value="cancel">Cancel</option>
                                                                            <option value="return"
                                                                        </select>
                                                                        <% } %>
                                                                            <% } else { %>
                                                                                <h4 class="text-danger">Cancelled</h4>
                                                                                <% } %>
                                                    </td>


                                                    <% } %>

                                                        <% let totalProductPrice=0; %>
                                                            <% for (let i=0; i < orders.product.length; i++) { %>
                                                                <% totalProductPrice +=parseInt(orders.product[i].price)
                                                                    * parseInt(orders.product[i].unit); %>
                                                                    <% } %>


                                                                        <% let discount=totalProductPrice -
                                                                            orders.totalPrice; %>



                                                                            <td class="text-center">
                                                                                ₹<%= orders.totalPrice.toLocaleString()
                                                                                    %>
                                                                            </td>

                                                </tr>


                                                <%}%>

                                                    <input type="hidden" name="" id="orderId" value="<%= orderId %>">

                                </tbody>
                            </table>
                        </div> <!-- table-responsive// -->
                    </div> <!-- col// -->
                    <div class="col-lg-1"></div>
                    <!-- col// -->
                </div>
            </div> <!-- card-body end// -->
            </div> <!-- card end// -->
        </section> <!-- content-main end// -->

    </main>

    <script>
        function tracking() {
            Swal.fire({
                title: '<strong><u>ORDER DETAILS</u></strong>',
                html: `
          <div class="modal-body">
            <div class="progress-track">
              <ul id="progressbar">
                <li class="step0 active " id="step1">Order placed</li>
                <li class="step0 active text-center" id="step2">In Transit</li>
                <li class="step0 active text-right" id="step3"><span>Out for Delivery</span></li>
                <li class="step0 text-right" id="step4">Delivered</li>
              </ul>
            </div>
          </div>
        `,
            });
        }



    </script>

    <!-- Bootstrap Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="progress-track">

                    </div>
                </div>
            </div>
        </div>
    </div>
    <style>
        /* Center the text */
        h3 {
            text-align: center;
        }

        /* Set the text color to red */
        h3 {
            color: red;
        }

        /* Set the font size */
        h3 {
            font-size: 24px;
            /* You can adjust the size as needed */
        }
    </style>

    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>



    <script>
        function handleDropdownChange(selectElement) {

            var selectedValue = selectElement.value;
            const productId = document.getElementById("singleProId")
            const quantity = document.getElementById("quantity")

            if (selectedValue == "cancel") {
                Swal.fire({
                    title: 'Confirm cancellation',
                    text: 'Are you sure you want to cancel this order?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, cancel it!'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `http://localhost:3000/cancelOrder?ProId=${productId.value}&orderId=${orderId.value}&quantity=${quantity.value}`;
                    } else {
                        location.reload();
                    }
                })
            }
        }

    </script>

    <%- include("../partials/userFooter") %>