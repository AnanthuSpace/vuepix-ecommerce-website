        }

        

        function verifyPayment(order, payment, id, orderId) {
            console.log(order)
            console.log("Payement : ", payment);

            $.ajax({
                url: '/verifyPayment',
                method: 'post',
                data: {
                    order,
                    payment,
                    orderId
                }, success: (response) => {
                    if (response.status) {
                        Swal.fire({
                            title: "Order success",
                            text: "order placed successfully",
