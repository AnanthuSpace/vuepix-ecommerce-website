        }




        function applyCoupon() {
            let couponCode = document.getElementById("couponCode").value
            if (!couponCode) {
                Swal.fire({
                    title: 'NO COUPON FOUND!',
                    text: 'Please enter the coupon code.',
                    icon: 'error',
                    timer: 3000,
                })
            } else {
                $.ajax({
                    url: '/applyCoupon',
                    method: "post",
                    data: {
                        code: couponCode
                    },
                    success: function (response) {
                        if (response.status === true) {
                            Swal.fire({
                                title: "COUPEN ADDED",
                                text: "Coupon added",
                                icon: "success",
                                showConfirmButton: false,
                                timer: 2000,
                            })
                            totalAmount = response.total;

                            document.getElementById("discountCell").innerHTML = `<h5>${response.discount}</h5>`;
                            document.getElementById("totalValue").innerHTML = `<span  id="total"  class="font-xl text-brand fw-900">${totalAmount}</span>`

                        } else if (response.used === true) {
                            Swal.fire({
                                title: 'COUPON ERROR!',
                                text: 'Coupon already used.',
                                icon: 'error',
                                timer: 3000,
                            })
                        } else if (response.status === false) {
                            Swal.fire({
                                title: 'COUPON ERROR!',
                                text: 'Coupon is not available',
                                icon: 'error',
                                timer: 3000,
                            })
                        }
                    }
                })
            }
        }




        function showCouponDetails(couponName) {
            Swal.fire({
                title: 'Coupon Details',
                text: `${couponName}`,
                icon: 'info',
                confirmButtonText: 'OK'
            }).then((result) => {
                if (result.isConfirmed) {
                    copyToClipboard(couponName);
                }
            });
        }

        function copyToClipboard(text) {
            var tempInput = document.createElement('input');
            document.body.appendChild(tempInput);
            tempInput.value = text;

            tempInput.select();
            document.execCommand('copy');

            document.body.removeChild(tempInput);

            Swal.fire({
                title: 'Copied!',
                text: 'Coupon name has been copied to the clipboard.',
                icon: 'success',
                confirmButtonText: 'OK'
            });
        }



        var usedCoupon = null;

        function useCoupon(couponName) {
            // Disable all other coupons
            disableOtherCoupons(couponName);

            // Show details for the used coupon
            showCouponDetails(couponName);

            // Show cancel button and hide use button for the used coupon
            document.getElementById('useButton_' + couponName).style.display = 'none';
            document.getElementById('cancelButton_' + couponName).style.display = 'block';

            usedCoupon = couponName;
        }



        function cancelCoupon(couponName) {
            // Enable all other coupons
            enableAllCoupons();

            // Hide cancel button and show use button for the canceled coupon
            document.getElementById('useButton_' + couponName).style.display = 'block';
            document.getElementById('cancelButton_' + couponName).style.display = 'none';

            usedCoupon = null;


            let coupon = document.getElementById("couponName").value;
            $.ajax({
                url: '/cancelCoupon',
                method: "post",
                data: {
                    code: coupon
                },
                success: function (response) {
                    if (response.status === true) {
                        Swal.fire({
                            title: "COUPEN REMOVE",
                            text: "Coupon removed",
                            icon: "success",
                            showConfirmButton: false,
                            timer: 2000,
                        })
                        totalAmount = response.total;
                        document.getElementById("discountCell").innerHTML = `<h5>${response.discount}</h5>`;
                        document.getElementById("totalValue").innerHTML = `<span  id="total"  class="font-xl text-brand fw-900">${totalAmount}</span>`

                    } else {
                        Swal.fire({
                            title: 'COUPON ERROR!',
                            text: 'Something wrong when cancel the coupon',
                            icon: 'error',
                            timer: 3000,
                        })
                    }
                }
            })
        }



        function disableOtherCoupons(excludeCoupon) {
            var couponButtons = document.querySelectorAll('.use-button, .cancel-button');
            couponButtons.forEach(function (button) {
                var couponName = button.id.replace('useButton_', '').replace('cancelButton_', '');
                if (couponName !== excludeCoupon) {
                    button.disabled = true;
                }
            });
        }

        function enableAllCoupons() {
            var couponButtons = document.querySelectorAll('.use-button, .cancel-button');
            couponButtons.forEach(function (button) {
                button.disabled = false;
            });
        }



        function validateForm() {
            const phoneRegex = /^\d{10}$/;
            const pincodeRegex = /^\d{6}$/;
            const name = document.getElementById('name').value;
            const phone = document.getElementById('phone').value;
            const pincode = document.getElementById('pincode').value;
            const addressType = document.getElementById('addressType').value;
            const address = document.getElementById('address').value;
            const state = document.getElementById('state').value;
            const city = document.getElementById('city').value;
            const landmark = document.getElementById('landmark').value;
            const alternatePhone = document.getElementById('alternatePhone').value;

            if (!name.trim()) {
                document.getElementById('nameError').innerHTML = "Please enter your first name";
                return false;
            } else {
                document.getElementById('nameError').innerHTML = "";
            }

            if (!phoneRegex.test(phone)) {
                document.getElementById('phoneError').innerHTML = "Please enter a valid 10 digit mobile number";
                return false;
            } else {
                document.getElementById('phoneError').innerHTML = "";
            }

            if (pincode && !pincodeRegex.test(pincode)) {
                document.getElementById('pincodeError').innerHTML = "Please enter a valid 6 digit pincode";
                return false;
            } else {
                document.getElementById('pincodeError').innerHTML = "";
            }

            if (!addressType) {
                document.getElementById('addressTypeError').innerHTML = "Please select an address type";
                return false;
            } else {
                document.getElementById('addressTypeError').innerHTML = "";
            }

            if (!address.trim()) {
                document.getElementById('addressError').innerHTML = "Please enter your address";
                return false;
            } else {
                document.getElementById('addressError').innerHTML = "";
            }

            if (!state.trim()) {
                document.getElementById('stateError').innerHTML = "Please enter your state";
                return false;
            } else {
                document.getElementById('stateError').innerHTML = "";
            }

            if (!city.trim()) {
                document.getElementById('cityError').innerHTML = "Please enter your city/district/town";
                return false;
            } else {
                document.getElementById('cityError').innerHTML = "";
            }

            if (!landmark.trim()) {
                document.getElementById('landmarkError').innerHTML = "Please enter a landmark";
                return false;
            } else {
                document.getElementById('landmarkError').innerHTML = "";
            }

            if (alternatePhone && !phoneRegex.test(alternatePhone)) {
                document.getElementById('alternatePhoneError').innerHTML = "Please enter a valid 10 digit alternate phone number";
                return false;
            } else {
                document.getElementById('alternatePhoneError').innerHTML = "";
            }

            return true; // Form submission allowed if all validations pass
        }

    </script>


