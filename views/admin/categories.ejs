                                            <th>Category</th>
                                            <th>Description</th>
                                            <th>Base Price</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%data.reverse()%>
                                        <% for (i = 0; i < data.length; i++) { %>
                                            <tr>
                                              <td><%= i+1 %></td>
                                              <td>  
                                                <img src="/upload/category/<%= data[i].image%>" width="80px" alt="img">
                                              </td>
                                              <td><%= data[i].category %></td>
                                              <td><%= data[i].description%></td>
                                              <td><%= data[i].base_price%></td>
                                              <td>
                                                <a href="/admin/edit-category/<%=data[i]._id%>" class="btn btn-info p-1">Edit</a>
                                                <%if(data[i].isListed == 1){%>
                                                    <a href="/admin/unlist-category/<%=data[i]._id%>" class="btn btn-danger p-1">Unlist</a>
                                                <%}else{%>
                                                    <a href="/admin/list-category/<%=data[i]._id%>" class="btn btn-success p-1">List</a>
