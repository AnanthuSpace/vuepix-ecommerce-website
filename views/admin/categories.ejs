                                <div class="mb-4">
                                    <label for="product_name" class="form-label">Name</label>
                                    <input name="category" pattern="^[^\s]+$" type="text" placeholder="Type here" class="form-control" id="name" required="true" maxlength="40" />
                                </div>
                                <div class="mb-4">
                                    <label for="image" class="form-label">Cover Image</label>
                                    <input name="image" type="file" placeholder="Type here" class="form-control" id="image" required="true" />
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">Description</label>
                                    <textarea name="description" placeholder="Type here" class="form-control" required="true" id="description"></textarea>
                                </div>
                                
                                <div class="d-grid">
                                    <button onclick="validate()" class="btn btn-primary" type="submit">Create category</button>
                                </div>
                                <p id="err-msg"></p>
                            </form>
                        </div>
